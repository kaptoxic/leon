<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
<!-- 			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" /> -->
			<PatternLayout pattern="%logger{3}:%L[%level]: %msg%n" />
		</Console>
	</appenders>
	<loggers>
		<logger name="leon.synthesis.ioexamples.Synthesizer" level="all" additivity="false">
			<appender-ref ref="Console" />
		</logger>
		<logger name="leon.test.ioexamples" level="all" additivity="false">
			<appender-ref ref="Console" />
		</logger>
		<logger name="leon.synthesis.ioexamples.Predicates$" level="off" additivity="false">
			<appender-ref ref="Console" />
		</logger>
		<logger name="leon.synthesis.ioexamples.Util$" level="off" additivity="false">
			<appender-ref ref="Console" />
		</logger>
		<logger name="leon.test" level="off" additivity="false">
			<appender-ref ref="Console" />
		</logger>
		<logger name="leon.test.ioexamples.CustomPrinter" level="off" additivity="false"/>
		<root level="error">
			<appender-ref ref="Console" />
		</root>
	</loggers>
</configuration>
